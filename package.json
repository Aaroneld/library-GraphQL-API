{
    "name": "library-GraphQL-API",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "cross-env NODE_ENV=testing knex seed:run && cross-env NODE_ENV=testing NO_LOGGER=true jest --watch --runInBand --detectOpenHandles --coverage",
        "server": "nodemon index.js",
        "start": "node index.js",
        "migrate:testing": "cross-env NODE_ENV=testing knex migrate:latest"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": true,
        "coverageProvider": "v8",
        "transform": {
            "^.+\\.graphql$": "graphql-import-node/jest"
        },
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/vendor/**",
            "!**/database/**",
            "!**/tests/**",
            "!**/spec/**",
            "!**/*.spec.{js,jsx}",
            "!**/*.test.{js,jsx}",
            "!**/coverage/**",
            "!**/data/migrations/**",
            "!**/data/seeds/**",
            "!**/index.js"
        ]
    },
    "dependencies": {
        "@graphql-tools/schema": "^7.1.2",
        "cross-env": "^7.0.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-graphql": "^0.12.0",
        "graphql": "^15.4.0",
        "graphql-import-node": "0.0.4",
        "knex": "^0.21.15",
        "sqlite3": "^5.0.0"
    },
    "devDependencies": {
        "jest": "^26.6.3",
        "supertest": "^6.1.1"
    }
}
